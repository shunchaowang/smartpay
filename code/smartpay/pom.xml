<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0                              http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <properties>
        <java.version>1.7</java.version>
        <maven-compiler.version>3.1</maven-compiler.version>
        <maven-jetty.version>9.0.6.v20130930</maven-jetty.version>
        <com.lambo.smartpay.version>1.0.0</com.lambo.smartpay.version>
        <com.lambo.smartpay.core.version>1.0.0</com.lambo.smartpay.core.version>
        <com.lambo.smartpay.pay.version>1.0.0</com.lambo.smartpay.pay.version>
        <com.lambo.smartpay.manage.version>1.0.0</com.lambo.smartpay.manage.version>
        <com.lambo.smartpay.ecs.version>1.0.0</com.lambo.smartpay.ecs.version>

        <!-- Generic properties -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <!-- Spring -->
        <spring-framework.version>4.1.4.RELEASE</spring-framework.version>

        <!-- Spring security -->
        <spring-security.version>3.2.6.RELEASE</spring-security.version>

        <!-- Spring jpa -->
        <spring-data-jpa.version>1.7.2.RELEASE</spring-data-jpa.version>

        <!-- Hibernate / JPA -->
        <!-- <hibernate.version>4.3.5.Final</hibernate.version> -->
        <hibernate.version>4.3.8.Final</hibernate.version>
        <javax.persistence.version>1.0.2</javax.persistence.version>
        <javax.mail.version>1.4.7</javax.mail.version>

        <!-- aspect dependency -->
        <aspectjweaver.version>1.8.5</aspectjweaver.version>

        <jstl.version>1.2</jstl.version>
        <ojdbc6.version>11.2.0</ojdbc6.version>
        <mysql.version>5.1.26</mysql.version>
        <javax.servlet.version>3.1.0</javax.servlet.version>
        <javax.mail.version>1.4.3</javax.mail.version>
        <commons-logging.version>1.1.3</commons-logging.version>
        <log4j.version>1.2.17</log4j.version>
        <slf4j.version>1.7.10</slf4j.version>
        <commons-codec.version>1.10</commons-codec.version>
        <commons-lang.version>3.3.2</commons-lang.version>
        <commons-dhcp.version>1.4</commons-dhcp.version>

        <junit.version>4.11</junit.version>
        <hsqldb.version>2.3.2</hsqldb.version>
    </properties>
    <groupId>com.lambo.smartpay</groupId>
    <artifactId>smartpay</artifactId>
    <packaging>pom</packaging>
    <version>${com.lambo.smartpay.version}</version>
    <name>Smartpay Platform for Online Shopping</name>

    <modules>
        <module>core</module>
        <module>pay</module>
        <module>manage</module>
        <module>ecs</module>
    </modules>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven-compiler.version}</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                    <compilerArgument>-Xlint:all</compilerArgument>
                    <showWarnings>true</showWarnings>
                    <showDeprecation>true</showDeprecation>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.17</version>
                <configuration>
                    <argLine>-Xmx1024m</argLine>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
